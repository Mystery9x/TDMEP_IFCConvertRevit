<Window x:Class="TepscoIFCToRevit.UI.Views.ProgressBarConvert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CONVERT IFC" Height="110" Width="700"
        MinHeight="110"
        MinWidth="700"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        SourceInitialized="Window_SourceInitialized"
        Background="AliceBlue">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#607d8b" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#607d8b" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#78909C" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#78909C" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" x:Name="tbxMessage"
                   x:FieldModifier="public"
                   Height="18" Margin="5,0,10,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Grid.ColumnSpan="2"><Run Text="" /><InlineUIContainer>
            </InlineUIContainer></TextBlock>

            <StackPanel   Grid.Row="1"
                          Orientation="Horizontal" FlowDirection="RightToLeft"
                          VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button x:Name="btnCancel"
                    Content="{Binding ContentCanCelButton}"
                    Width="90"
                    Height="30"
                    Click="ButtonCancel_Click"
                    Margin="5,0,5,5"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    RenderTransformOrigin="2.12,0.75"
                    IsCancel="True"
                    TabIndex="1">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnSkip"
                    Content="{Binding ContentApplyButton}"
                    Width="90"
                    Height="30"
                    Click="ButtonSkip_Click"
                    Margin="5,0,0,5"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    RenderTransformOrigin="2.12,0.75"
                    IsCancel="True"
                    TabIndex="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <ProgressBar Grid.Row="0"
                     x:Name="prgSingle"
                     x:FieldModifier="public"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     Height="20"
                     Margin="5,0,5,0">
            </ProgressBar>
        </Grid>
    </Window.Content>
</Window>